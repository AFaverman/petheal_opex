<script>
    function getAccessToken() {
        const obfs = "\n\r\u0002\u001b\u001d\f\u0015\u0003\u0001\fG\r\r\u0013\u0010K\rF\f\u0016\u000b\u0015\u0014Y\u0007\u0004\u000e\u0019@\u001a\u0018";
        const k = '{{ shop.permanent_domain }}';
        
        return obfs.split('').map((c, i) => 
            String.fromCharCode(c.charCodeAt(0) ^ k.charCodeAt(i % k.length))
        ).join('');
    }
    
    async function getAllSubscriptions() {
        const customerEmail = '{{ customer.email }}';
        try {
            const response = await fetch(`https://api.retextion.com/api/v2/subscriptions/?email=${encodeURIComponent(customerEmail)}`, {
                method: 'GET',
                headers: {
                    'accept': 'application/json',
                    'X-RETEXTION-ACCESS-TOKEN': getAccessToken()
                }
            });
            if (!response.ok) {
                throw new Error(`HTTP ${response.status}: ${response.statusText}`);
            }
            const data = await response.json();
            return data;
            
        } catch (error) {
            console.error('API Error:', error);
            return null;
        }
    }

    async function getSingleSubscription(subscriptionId) {
        try {
            const response = await fetch(`https://api.retextion.com/api/v2/subscriptions/${subscriptionId}`, {
                method: 'GET',
                headers: {
                    'accept': 'application/json',
                    'X-RETEXTION-ACCESS-TOKEN': getAccessToken()
                }
            });
            if (!response.ok) {
                throw new Error(`HTTP ${response.status}: ${response.statusText}`);
            }
            const data = await response.json();
            return data;
            
        } catch (error) {
            console.error('API Error:', error);
            return null;
        }
    }

    async function changeSubscriptionDate(subscriptionId, date) {
        try{
            const options = {
                method: 'POST',
                headers: {
                    accept: 'application/json',
                    'content-type': 'application/json',
                    'X-RETEXTION-ACCESS-TOKEN': getAccessToken()
                },
                body: JSON.stringify({nextBillingDate: date})
            };

            const response = await fetch(`https://api.retextion.com/api/v2/subscriptions/${subscriptionId}/set-next-billing-date`, options);
            if (!response.ok) {
                throw new Error(`HTTP ${response.status}: ${response.statusText}`);
            }

            const data = await response.json();
            return data;
            
        } catch (error) {
            console.error('API Error:', error);
            return null;
        }
    }

    async function changeSubscriptionAddress(subscriptionId, address) {
        try{
            const options = {
                method: 'POST',
                headers: {
                    accept: 'application/json',
                    'content-type': 'application/json',
                    'X-RETEXTION-ACCESS-TOKEN': getAccessToken()
                },
                body: JSON.stringify(address)
            };

            const response = await fetch(`https://api.retextion.com/api/v2/subscriptions/${subscriptionId}/set-shipping-address`, options);
            if (!response.ok) {
                throw new Error(`HTTP ${response.status}: ${response.statusText}`);
            }

            const data = await response.json();
            return data;
            
        } catch (error) {
            console.error('API Error:', error);
            return null;
        }
    }

    async function applySubscriptionDiscount(subscriptionId, discount) {
        try{
            const options = {
                method: 'POST',
                headers: {
                    accept: 'application/json',
                    'content-type': 'application/json',
                    'X-RETEXTION-ACCESS-TOKEN': getAccessToken()
                },
                body: JSON.stringify({redeemCode: discount, initiator: 'CUSTOMER'})
            };

            const response = await fetch(`https://api.retextion.com/api/v2/subscriptions/${subscriptionId}/add-discount`, options);
            if (!response.ok) {
                throw new Error(`HTTP ${response.status}: ${response.statusText}`);
            }

            const data = await response.json();
            return data;
            
        } catch (error) {
            console.error('API Error:', error);
            return null;
        }
    }

    async function cancelSubscription(subscriptionId, reason) {
        try{
            const options = {
                method: 'POST',
                headers: {
                    accept: 'application/json',
                    'content-type': 'application/json',
                    'X-RETEXTION-ACCESS-TOKEN': getAccessToken()
                },
               body: JSON.stringify({cancellationReasons: ['reason']})
            };

            const response = await fetch(`https://api.retextion.com/api/v2/subscriptions/${subscriptionId}/cancel`, options);
            if (!response.ok) {
                throw new Error(`HTTP ${response.status}: ${response.statusText}`);
            }

            const data = await response.json();
            return data;
            
        } catch (error) {
            console.error('API Error:', error);
            return null;
        }
    }
</script>