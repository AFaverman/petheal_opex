    function getAccessToken() {
        const obfs = "\n\r\u0002\u001b\u001d\f\u0015\u0003\u0001\fG\r\r\u0013\u0010K\rF\f\u0016\u000b\u0015\u0014Y\u0007\u0004\u000e\u0019@\u001a\u0018";
        const k = '{{ shop.permanent_domain }}';
        
        return obfs.split('').map((c, i) => 
            String.fromCharCode(c.charCodeAt(0) ^ k.charCodeAt(i % k.length))
        ).join('');
    }
    
