{{ 'component-tabulated-content.css' | asset_url | stylesheet_tag }}
{{ 'component-accordion.css' | asset_url | stylesheet_tag }}
{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

<script src="{{ 'tabulated-content.js' | asset_url }}" defer></script>
<script src="{{ 'collapsible-content.js' | asset_url }}" defer></script>
{%- style -%}
  .section-{{ section.id }}-padding {
    padding: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px 2rem {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px 2rem;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding: {{ section.settings.padding_top }}px 4rem {{ section.settings.padding_bottom }}px 4rem;
    }
  }
  @media screen and (min-width: 1040px) {
    .section-{{ section.id }}-padding {
      padding: {{ section.settings.padding_top }}px 6rem {{ section.settings.padding_bottom }}px 6rem;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="section-{{ section.id }}-padding">
    <div class="page-width">
      <tabulated-content class="tabulated-content{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        <div class="tabulated-content__tabs">
          {%- if section.settings.heading != blank -%}
            <h2 class="title title-wrapper--no-top-margin inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
              {{ section.settings.heading }}
            </h2>
          {%- endif -%}
          {%- for block in section.blocks -%}
            {%- capture block_content -%}
              {%- render block -%}
            {%- endcapture -%}
            {%- assign tab_title =  block_content | split: '||' | first -%}
            {%- assign tab_handle = tab_title | split: '</' | first | split: '>' | last | handleize -%}
            <button
              class="tabulated-content__tab px-4 py-2"
              data-tab-id="{{ block.id }}"
              data-tab-index="{{ forloop.index0 }}"
              data-tab-handle="{{ tab_handle }}"
              {{ block.shopify_attributes }}
              {% if forloop.first %}aria-selected="true"{% endif %}
            >
              {{ tab_title }}
            </button>
          {%- endfor -%}
        </div>
        
        <div class="tabulated-content__panels">
          {%- for block in section.blocks -%}
            {%- capture block_content -%}
              {%- render block -%}
            {%- endcapture -%}
            {%- assign tab_title =  block_content | split: '||' | first -%}
            {%- assign tab_content = block_content | split: '||' | last -%}
            <div
              class="tabulated-content__panel"
              data-panel-id="{{ block.id }}"
              {{ block.shopify_attributes }}
            >
              <button
                class="tabulated-content__mobile-header px-4 py-2"
                data-tab-index="{{ forloop.index0 }}"
                {{ block.shopify_attributes }}
              >
                {{ tab_title }}
              </button>
              <div class="tabulated-content__panel-content">
                {{ tab_content }}
              </div>
            </div>
          {%- endfor -%}
        </div>
      </tabulated-content>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Tabulated Content",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
            "value": "h2",
            "label": "t:sections.all.heading_size.options__1.label"
          },
          {
            "value": "h1",
            "label": "t:sections.all.heading_size.options__2.label"
          },
          {
            "value": "h0",
            "label": "t:sections.all.heading_size.options__3.label"
          },
          {
            "value": "hxl",
            "label": "t:sections.all.heading_size.options__4.label"
          },
          {
            "value": "hxxl",
            "label": "t:sections.all.heading_size.options__5.label"
          }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "checkbox",
      "id": "single_open_only",
      "default": false,
      "label": "Allow only one accordion open at a time"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "tab"
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Tabulated Content",
      "blocks": [
        {
          "type": "tab",
          "settings": {
            "tab_title": "Contact & FAQ"
          }
        },
        {
          "type": "tab",
          "settings": {
            "tab_title": "Support"
          }
        }
      ]
    }
  ]
}
{% endschema %} 